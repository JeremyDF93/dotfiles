[
  {
    "clean": ["~"]
  },
  {
    "link": {
      "~/.zsh": "zsh/",
      "~/.zshrc": "zshrc",
      "~/.zprofile": "zprofile",
      "~/.vim": "vim/",
      "~/.vimrc": "vimrc",
      "~/.tmux": "tmux/",
      "~/.tmux.conf": "tmux.conf",
      "~/.gitconfig": "gitconfig",
      "~/.config/powerline": "config/powerline/",
      "~/.config/fontconfig": "config/fontconfig/",
      "~/.config/yay": "config/yay/",
      "~/.fonts": "fonts/"
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"],
      ["sudo pacman --noconfirm -S powerline", "Installing Powerline"],
      ["sudo pacman --noconfirm -S exa", "Installing exa"],
      ["sudo yay --noconfirm -S zsh-pure-prompt", "Installing Pure Prompt"]
    ]
  }
]
