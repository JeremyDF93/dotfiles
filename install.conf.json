[
  {
    "clean": ["~"]
  },
  {
    "link": {
      "~/.zsh": "zsh/",
      "~/.zshrc": "zshrc",
      "~/.zprofile": "zprofile",
      "~/.vim": "vim/",
      "~/.vimrc": "vimrc",
      "~/.tmux.conf": "tmux.conf",
      "~/.gitconfig": "gitconfig",
      "~/.npmrc": "npmrc"
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"],
      ["npm install --global pure-prompt", "Installing Pure"],
      ["cargo install exa", "Installing exa"]
    ]
  }
]
