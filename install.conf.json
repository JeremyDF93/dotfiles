[
  {
    "clean": ["~"]
  },
  {
    "link": {
      "~/.zsh": "zsh/",
      "~/.zshrc": "zshrc",
      "~/.zprofile": "zprofile",
      "~/.vim": "vim/",
      "~/.vimrc": "vimrc",
      "~/.tmux": "tmux/",
      "~/.tmux.conf": "tmux.conf",
      "~/.gitconfig": "gitconfig",
      "~/.config/powerline": "config/powerline/",
      "~/.config/fontconfig": "config/fontconfig/",
      "~/.config/yay": "config/yay/",
      "~/.fonts": "fonts/"
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"],
      ["pip install --user powerline-status", "Installing Powerline"],
      ["npm install --global pure-prompt", "Installing Pure"],
      ["cargo install exa", "Installing exa"]
    ]
  }
]
